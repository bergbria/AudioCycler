<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="MSISetup" Language="1033" Version="1.0.0.0" Manufacturer="BergerTech" UpgradeCode="4f5617b3-49be-4b1d-8385-67264ffe3769">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="MSISetup" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLFOLDER" Name="Audio Switcher" />
			</Directory>
			<Directory Id="ProgramMenuFolder">
				<Directory Id="ApplicationShortcutsFolder" Name="Audio Switcher" />
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			<Component Id="CyclerExecutable" Guid="BCF80FDF-3145-4FAB-B10D-4E1A0206B640">
				<File Id="CyclerExecutable" Source="$(var.AudioCycler.TargetPath)" />
			</Component>
			<Component Id="AudioInterface.dll" Guid="DE889805-B93C-43FD-BC03-E36834DD5A5D">
				<File Source="$(var.AudioInterface.TargetPath)"/>
				<!--<RemoveFile Id="RemoveAudioInterface.dll" Name="$(var.AudioInterface.TargetFileName)" On="uninstall"/>-->
			</Component>
		</ComponentGroup>

		<ComponentGroup Id="ApplicationShortcuts" Directory="ApplicationShortcutsFolder" >
			<Component Id="CyclerShortcut" Guid="F4EC2F81-DEE0-4657-804C-3E669706F14B">
				<Shortcut Id="CyclerShortcut"
						  Name="Cycle Audio Device"
						  Description="Cycle audio playback device to the next available device"
						  Target="[#CyclerExecutable]"
						  WorkingDirectory="APPLICATIONROOTDIRECTORY">
					<ShortcutProperty Key="System.AppUserModel.ID" Value="Berger.AudioCycler" />
				</Shortcut>

				<Shortcut Id="UninstallProduct"
          Name="Uninstall AudioSwitcher"
          Target="[SystemFolder]msiexec.exe"
          Arguments="/x [ProductCode]"
          Description="Uninstalls AudioSwitcher" />

				<RemoveFolder Id="ApplicationShortcutsFolder" On="uninstall"/>
				<RegistryValue Root="HKCU" Key="Software\Microsoft\AudioSwitcher" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
			</Component>
		</ComponentGroup>

		<Feature Id="MainApplication" Title="Main Application" Level="1" >
			<ComponentGroupRef Id="ProductComponents"/>
			<ComponentGroupRef Id="ApplicationShortcuts" />
		</Feature>
	</Fragment>
</Wix>